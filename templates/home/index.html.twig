{% extends 'base.html.twig' %}

{% block title %}Mini Blog{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <ul class="navbar-nav ml-auto">
            {% for locale in locales %}
                {% if locale != app.request.locale %}
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('change_locale', {'locale': locale}) }}">{% trans %}Change to{% endtrans %} {{locale}}</a>
                    </li>
                {% endif %}
            {% endfor %}
        </ul>
    </div>
    <div class="row">
        {% for post in posts %}
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{post.title}}</h5>
                        <p class="card-text">{{post.content}}</p>
                        <p class="card-text">{{post.author}} - {{post.createdAt|date("d/m/Y")}}</p>
                        <a href="/posts/{{post.slug}}" class="btn btn-primary">{% trans %}Go to Article{% endtrans %}</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
