{% extends 'base.html.twig' %}

{% block title %}Mini Blog{% endblock %}

{% block body %}

<div class="container">
    <div class="row">
        {% for post in posts %}
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{post.title}}</h5>
                        <p class="card-text">{{post.content}}</p>
                        <p class="card-text">{{post.author}} - {{post.createdAt|date("d/m/Y")}}</p>
                        <a href="/posts/{{post.slug}}" class="btn btn-primary">Go to Article</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
